<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_radius_dialog"
    android:padding="30dp">

    <TextView
        android:id="@+id/tv_textHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tt_interphases_pro_black"
        android:letterSpacing="0.02"
        android:text="insert header here"
        android:textColor="@color/colorPrimary"
        android:textSize="32sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_textDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/tt_interphases_pro_demibold"
        android:text="insert description here"
        android:textAlignment="center"
        android:textColor="@color/colorFontDark"
        android:alpha="0.5"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_textHeader" />

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_textDesc"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/corner_radius_small"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/tt_interphases_pro_black"
            android:paddingVertical="20dp"
            android:text="CANCEL"
            android:textColor="@color/colorSecondary"
            android:textSize="13sp"
            app:strokeColor="@color/colorFontDark" />

        <Button
            android:id="@+id/btnProceed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/corner_radius_small"
            android:backgroundTint="@color/colorButtons"
            android:fontFamily="@font/tt_interphases_pro_black"
            android:paddingVertical="20dp"
            android:text="PROCEED"
            android:textColor="@color/colorFontLight"
            android:textSize="13sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>