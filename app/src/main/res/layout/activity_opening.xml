<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_grainy3"
    tools:context=".OpeningActivity">

    <TextView
        android:id="@+id/tv_openingHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/tt_interphases_pro_black"
        android:text="WELCOME TO BIHAYE 👋🏼"
        android:layout_marginTop="45dp"
        android:textAllCaps="true"
        android:textColor="@color/colorFontLight"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_openingText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/tt_interphases_pro_black"
        android:layout_marginBottom="10dp"
        android:text="Tanang ruta"
        android:textAllCaps="true"
        android:textColor="@color/colorFontLight"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_openingText2" />

    <TextView
        android:id="@+id/tv_openingText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/tt_interphases_pro_black"
        android:layout_marginBottom="10dp"
        android:text="tanang sakyanan"
        android:textAllCaps="true"
        android:textColor="@color/colorFontLight"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_openingText3" />

    <TextView
        android:id="@+id/tv_openingText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tt_interphases_pro_black"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="20dp"
        android:lineSpacingExtra="9dp"
        android:text="naa sa imong kamot!"
        android:textAllCaps="true"
        android:textColor="@color/colorFontLight"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_getStarted" />

    <Button
        android:id="@+id/btn_getStarted"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/tt_interphases_pro_extrabold"
        android:text="Get Started"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>