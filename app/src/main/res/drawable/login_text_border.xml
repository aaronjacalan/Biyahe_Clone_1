<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Error state (you can use state_selected or a custom state if you want more control) -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="15dp" />
            <stroke android:color="@color/colorButtons" android:width="1dp" />
        </shape>
    </item>

    <!-- Focused state (higher priority than default, but lower than error/activated) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="15dp" />
            <stroke android:color="@color/colorPrimary" android:width="1dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="15dp" />
            <stroke android:color="#C0C0C0" android:width="1dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="15dp" />
            <stroke android:color="#E8E8E8" android:width="1dp" />
        </shape>
    </item>

</selector>