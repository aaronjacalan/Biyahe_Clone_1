<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Moon (when checked/night mode) -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <size android:width="25dp" android:height="25dp" />
            <stroke android:width="6dp" android:color="@android:color/transparent" />
            <gradient
                android:startColor="#D0D0E1"
                android:endColor="#7986CB"
                android:angle="135" />
        </shape>
    </item>

    <!-- Sun (when unchecked/day mode) -->
    <item>
        <shape android:shape="oval">
            <size android:width="25dp" android:height="25dp" />
            <stroke android:width="6dp" android:color="@android:color/transparent" />
            <gradient
                android:startColor="#FFF9C4"
                android:endColor="#FFB300"
                android:angle="45" />
        </shape>
    </item>

</selector>